# brew taps (with installs) ==================================================
# homebrew-bandle: https://github.com/Homebrew/homebrew-bundle
#    `brew bundle`, Brewfileを元にbrew一覧をインストールする
tap "homebrew/bundle"

# homebrew-cask: https://github.com/Homebrew/homebrew-cask
#    `brew cask`, 実行アプリケーション インストールコマンド
tap "homebrew/cask"

# homebrew-core: https://github.com/Homebrew/homebrew-core
#    `brew` コマンドの本体
tap "homebrew/core"

# mutagen: https://mutagen.io
#    リアルタイムファイル同期/柔軟なネットワーク転送を提供するツール
#    Docker内外のファイル転送を最適化する為に使用しているよ
tap "mutagen-io/mutagen"
brew "mutagen-io/mutagen/mutagen"

# ookla speedtest: https://www.speedtest.net/apps/cli
#    ookla社のspeedtest CLI
tap "teamookla/speedtest"
brew "teamookla/speedtest/speedtest"

# brew installs ==============================================================
# bash: using newest bash
brew "bash"

# bat: https://github.com/sharkdp/bat
#    A cat clone with syntax highlighting and Git integration.
brew "bat"

# colordiff: https://www.colordiff.org
#    色付きdiff
brew "colordiff"

# guile: https://www.gnu.org/software/guile/
#    GNU Ubiquitous Intelligent Language for Extensions の略
brew "guile"

# unbound: https://www.unbound.net
#    開発用DNSサーバ
brew "unbound"

# GunTLS: https://gnutls.org
#    SSL、TLS、DTLSのプロトコルとテクノロジーを実装するセキュア通信ライブラリ
brew "gnutls"

# genact: https://github.com/svenstaro/genact
#    cli上で「なにか凄いことしてる風」の何もしないジョークコマンド
brew "genact"

# GitHub cli: https://github.com/cli/cli
#    GitHub上の作業がcli上である程度できるコマンド
brew "gh"

# git: https://git-scm.com
brew "git"

# git-lfs: https://github.com/git-lfs/git-lfs
#    Gitで大きなファイルを管理するためのコマンドライン拡張
brew "git-lfs"

# GNU sed: https://www.gnu.org/software/sed/
#    最新版のsed (MacのsedはBSDベースなため挙動が違うため明示的にこちらを使う
brew "gnu-sed"

# GNU time: https://www.gnu.org/software/time/
#    GNU版time (Macのtimeは簡易版コマンド。より詳細の情報を出力する
brew "gnu-time"

# GNU PGP: https://gnupg.org
#    GNU Pretty Good Privacy (PGP) package, 署名に必要
brew "gnupg"

# GO-lang: https://go.dev
brew "go"

# GObject Introspection: https://gi.readthedocs.io/en/latest/
#    C言語ライブラリーを各種スクリプト言語から言語バインディングを書かずに使える機能を提供する
brew "gobject-introspection"

# htop: https://htop.dev
#    リッチなtopコマンド (リソースモニタ)
brew "htop"

# iperf3: https://github.com/esnet/iperf
#    ネットワーク帯域測定ツール (TCP, UDP, SCTP)
brew "iperf3"

# lua-lang: https://www.lua.org
brew "lua"

# NeoVim: https://neovim.io/
brew "neovim"

# Nghttp2: https://nghttp2.org
#    HTTP/2 C Library
brew "nghttp2"

# nkf: https://osdn.net/projects/nkf/
#    Network Kanji Filter (漢字コード変換プログラム)
brew "nkf"

# OpenSSL: https://www.openssl.org
#    SSL/TLS暗号化・ツールキット
brew "openssl@3"

# perl-lang: https://www.perl.org/
brew "perl"

# rsync: https://rsync.samba.org/
brew "rsync"

# rust-lang: https://www.rust-lang.org/
brew "rust"

# git-tig: https://jonas.github.io/tig/
#    Gitリポジトリ操作インターフェース
brew "tig"

# tmux: https://tmux.github.io/
#    Terminal MUltipleXer
brew "tmux"

# zsh: https://www.zsh.org/
#    UNIX shell (command interpreter)
brew "zsh"

# brew casks =================================================================
# keyCastr: https://github.com/keycastr/keycastr
#    キー入力をディスプレイ上に表示するアプリ
cask "keycastr"

# p4: https://www.perforce.com/products/helix-core-apps/command-line-client
#    Perforce Helix Core cli
cask "p4"
